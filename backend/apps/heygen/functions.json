[
  {
    "name": "HEYGEN__GENERATE_VIDEO",
    "description": "Generate an AI avatar video with custom script, voice, and background settings.",
    "tags": ["video", "generate", "avatar", "ai"],
    "visibility": "public",
    "active": true,
    "protocol": "rest",
    "protocol_data": {
      "method": "POST",
      "path": "/v2/video/generate",
      "server_url": "https://api.heygen.com"
    },
    "parameters": {
      "type": "object",
      "properties": {
        "header": {
          "type": "object",
          "properties": {
            "Content-Type": {
              "type": "string",
              "default": "application/json"
            }
          },
          "required": ["Content-Type"],
          "visible": [],
          "additionalProperties": false
        },
        "body": {
          "type": "object",
          "properties": {
            "video_inputs": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "character": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["avatar"],
                        "default": "avatar"
                      },
                      "avatar_id": {
                        "type": "string",
                        "description": "ID of the avatar to use"
                      }
                    },
                    "required": ["type", "avatar_id"],
                    "visible": ["type", "avatar_id"],
                    "additionalProperties": false
                  },
                  "voice": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["text"],
                        "default": "text"
                      },
                      "input_text": {
                        "type": "string",
                        "description": "Script text for the avatar to speak"
                      },
                      "voice_id": {
                        "type": "string",
                        "description": "ID of the voice to use"
                      }
                    },
                    "required": ["type", "input_text"],
                    "visible": ["type", "input_text", "voice_id"],
                    "additionalProperties": false
                  },
                  "background": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["color", "image"],
                        "default": "color"
                      },
                      "value": {
                        "type": "string",
                        "description": "Background color (hex) or image URL"
                      }
                    },
                    "required": ["type"],
                    "visible": ["type", "value"],
                    "additionalProperties": false
                  }
                },
                "required": ["character", "voice"],
                "visible": ["character", "voice", "background"]
              },
              "description": "Array of video input configurations"
            },
            "dimension": {
              "type": "object",
              "properties": {
                "width": {
                  "type": "integer",
                  "default": 1280,
                  "description": "Video width in pixels"
                },
                "height": {
                  "type": "integer",
                  "default": 720,
                  "description": "Video height in pixels"
                }
              },
              "required": [],
              "visible": ["width", "height"],
              "additionalProperties": false
            }
          },
          "required": ["video_inputs"],
          "visible": ["video_inputs", "dimension"],
          "additionalProperties": false
        }
      },
      "required": ["header", "body"],
      "visible": ["body"],
      "additionalProperties": false
    }
  },
