  {
    "name": "HEYGEN__TRANSLATE_VIDEO",
    "description": "Translate an existing video to a different language while maintaining the avatar's lip-sync.",
    "tags": ["video", "translate", "language"],
    "visibility": "public",
    "active": true,
    "protocol": "rest",
    "protocol_data": {
      "method": "POST",
      "path": "/v1/video_translate.translate",
      "server_url": "https://api.heygen.com"
    },
    "parameters": {
      "type": "object",
      "properties": {
        "header": {
          "type": "object",
          "properties": {
            "Content-Type": {
              "type": "string",
              "default": "application/json"
            }
          },
          "required": ["Content-Type"],
          "visible": [],
          "additionalProperties": false
        },
        "body": {
          "type": "object",
          "properties": {
            "video_url": {
              "type": "string",
              "format": "uri",
              "description": "URL of the video to translate"
            },
            "target_language": {
              "type": "string",
              "description": "Target language code (e.g., 'es', 'fr', 'de')"
            },
            "voice_id": {
              "type": "string",
              "description": "Voice ID for the target language"
            },
            "translate_audio_only": {
              "type": "boolean",
              "default": false,
              "description": "Whether to translate only audio without changing avatar"
            }
          },
          "required": ["video_url", "target_language"],
          "visible": ["video_url", "target_language", "voice_id", "translate_audio_only"],
          "additionalProperties": false
        }
      },
      "required": ["header", "body"],
      "visible": ["body"],
      "additionalProperties": false
    }
